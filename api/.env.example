# Database Configuration (for Docker Compose)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=gasless_user
DATABASE_PASS=gasless_password
DATABASE_NAME=gasless

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Starknet Configuration (Sepolia Testnet)
STARKNET_RPC_URL=https://starknet-sepolia.public.blastapi.io/rpc/v0_7
STARKNET_ACCOUNT_ADDRESS=your_account_address_here
STARKNET_PRIVATE_KEY=your_private_key_here
STARKNET_CONTRACT_ADDRESS=your_deployed_contract_address_here
STARKNET_NETWORK=sepolia

# JWT Authentication
JWT_SECRET=your_jwt_secret_minimum_32_characters_long_please_change_this
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_MS=2000

# XMTP configuration (server-side agent)
# Set XMTP_ENABLED=true to enable sending messages from the backend
# XMTP_PRIVATE_KEY should be a hex private key (0x...) for the sending wallet
# XMTP_RECIPIENTS should be a comma-separated list of recipient wallet addresses or peer ids
# XMTP_ENV can be 'development' or 'production' (defaults to production)
XMTP_ENABLED=false
XMTP_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
XMTP_RECIPIENTS=
XMTP_ENV=production
